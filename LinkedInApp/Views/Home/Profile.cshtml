@model LinkedInApp.Models.ProfileResult
@{
    ViewData["Title"] = "Profile Card";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="card shadow-lg p-4" style="border-radius: 20px;">
                <h3 class="mb-3">@Model.Name’s Profile Card</h3>

                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" alt="Generated Profile Card" class="img-fluid rounded mb-3" style="max-height: 500px;" />
                    <a class="btn btn-success btn-lg" href="@Model.ImagePath" download>
                        <i class="bi bi-download"></i> Download Card
                    </a>
                }
                else
                {
                    <p>No image available.</p>
                }
            </div>
        </div>
    </div>
</div>
