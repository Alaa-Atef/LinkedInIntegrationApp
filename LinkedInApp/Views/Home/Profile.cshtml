@model LinkedInApp.Models.ProfileResult

@{
    ViewData["Title"] = "Profile Image";
}

<h2>@Model.Name's LinkedIn Profile Card</h2>

@if (!string.IsNullOrEmpty(Model.ImagePath))
{
    <img src="@Model.ImagePath" alt="Generated Profile Card" style="border:2px solid #ccc; max-width:100%;" />
}
else
{
    <p>No image available.</p>
}
